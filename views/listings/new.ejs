<% layout("/layouts/boilerplate") %>
  <body>
    <div class="row mt-3">
      <div class="col col-8 offset-2">
    
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" class="needs-validation"  novalidate  enctype="multipart/form-data">


      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
      <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required/>
      <div class="valid-feedback">Title looks good</div>
      </div>
      
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
      <div class="invalid-feedback">A short description is required</div>

      </div>
      
      <!-- <div class="mb-3">
      <label for="image-url" class="form-label">Image Link </label>
      <input name="listing[image]" class="form-control" placeholder="" type="text"/>
     </div> -->

      
     <div class="mb-3">
      <label for="image-url" class="form-label">upload image </label>
      <input name="listing[image]" class="form-control" placeholder="" type="file" required/>
     </div>


    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" class="form-control" placeholder="1500"  required />
      <div class="invalid-feedback">please enter a valid price</div>

      </div>
      
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]"  class="form-control" placeholder="India" type="text" required/>
      <div class="invalid-feedback">please enter a valid country</div>

      </div>
    </div>
      
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" class="form-control" placeholder="Andhrapradesh" type="text" required/>
      <div class="invalid-feedback">please enter a valid location</div>

    </div>
     
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br /><br />

    </form>
  </div>
  </div>
  </body>
